{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "checkJs": true,
        "baseUrl": ".",
        "paths": {
            "assets/*": ["./src/assets/*"],
            "components/*": ["./src/components/*"],
            "store/*": ["./src/store/*"],
            "transformers/*": ["./src/transformers/*"],
            "types/*": ["./types/*"]
        }
    }
    // "include": ["src/**/*"]
}
